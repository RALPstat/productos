<h1>Productos</h1>
<table>
	<tr>
		<th>Nombre</th>
		<th>Descripción</th>
		<th>Precio</th>
		<th>Disponibilidad</th>
		<th colspan="3">Opciones</th>
	</tr>
	<% @products.each do |product| %>
		<tr>
			<td><%= product.name %></td>
			<td><%= product.description %></td>
			<td><%= product.price %></td>
		<% if product.published? %>
				<td> Disponible </td>
		<% else %>
				<td> No disponible </td>
		<% end %>
			<td><%= link_to 'Mostrar', product_path(product) %></td>
			<td><%= link_to 'Editar', edit_product_path(product) %></td>
			<td><%= link_to 'DESTRUIR!!!', product_path(product), method: :delete, data: {confirm: '¿En serio?'} %></td>
		</tr>
	<% end %>
</table>

<%= link_to 'Crear producto', new_product_path %>